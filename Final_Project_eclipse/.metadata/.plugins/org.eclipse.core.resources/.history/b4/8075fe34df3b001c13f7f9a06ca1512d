
#ifndef HMI_ECU_H_
#define HMI_ECU_H_
/****************************************************************************************

   	   	   	   	   	   Macro definition

 ***************************************************************************************/
#define MODE_OPENING_DOOR 0
#define MODE_ALARM 1
#define MODE_MOTOR_REST 2

#define THEIF_ALARM 0x20
#define HAND_SHAKE 0x50

